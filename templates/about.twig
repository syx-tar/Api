{% extends "base.twig" %}

{% block content %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold mb-4">
                    <i class="fas fa-info-circle text-primary me-3"></i>
                    {{ title }}
                </h1>
                <p class="lead text-muted">{{ content }}</p>
            </div>
            
            <div class="card shadow-lg">
                <div class="card-body p-5">
                    <h3 class="mb-4">
                        <i class="fas fa-lightbulb text-warning me-2"></i>
                        About This Project
                    </h3>
                    <p class="mb-4">
                        This is a modern PHP web application built with best practices and contemporary technologies. 
                        It demonstrates how to create a scalable, maintainable web application using the Slim Framework.
                    </p>
                    
                    <h4 class="mb-3">
                        <i class="fas fa-tools text-info me-2"></i>
                        Technologies Used
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fab fa-php text-primary me-2"></i>
                                    <strong>PHP 8.1+</strong> - Modern PHP with latest features
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-layer-group text-success me-2"></i>
                                    <strong>Slim Framework</strong> - Lightweight PHP framework
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-file-code text-warning me-2"></i>
                                    <strong>Twig</strong> - Powerful templating engine
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fab fa-bootstrap text-primary me-2"></i>
                                    <strong>Bootstrap 5</strong> - Modern CSS framework
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-cube text-info me-2"></i>
                                    <strong>Composer</strong> - Dependency management
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-server text-secondary me-2"></i>
                                    <strong>PSR Standards</strong> - PHP best practices
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <h4 class="mb-3 mt-4">
                        <i class="fas fa-rocket text-danger me-2"></i>
                        Key Features
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Responsive design
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    RESTful API endpoints
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Modern UI components
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Error handling
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Modular architecture
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Easy to extend
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="text-center mt-5">
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>
                            Back to Home
                        </a>
                        <a href="/api/hello" class="btn btn-outline-secondary btn-lg ms-3" target="_blank">
                            <i class="fas fa-external-link-alt me-2"></i>
                            Test API
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}